<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">

    <TextView
        android:id="@+id/textView_logged_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/username"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/email"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_logged_status"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toStartOf="@+id/textView_logged_status"
        app:layout_constraintTop_toBottomOf="@+id/textView_logged_status" />

    <EditText
        android:id="@+id/editText_username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textView_logged_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_logged_status"
        app:layout_constraintTop_toTopOf="@+id/textView_logged_status"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textView_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_email"
        app:layout_constraintTop_toTopOf="@+id/textView_email"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/textView_darkmode"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/darkmode"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_email"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/textView_email"
        app:layout_constraintTop_toBottomOf="@+id/textView_email" />

    <Switch
        android:id="@+id/switch_darkmode"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_marginStart="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_darkmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toEndOf="@+id/textView_darkmode"
        app:layout_constraintTop_toTopOf="@+id/textView_darkmode"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/settings_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/logout"
        app:layout_constraintBottom_toBottomOf="@+id/save_settings"
        app:layout_constraintEnd_toStartOf="@+id/save_settings"
        app:layout_constraintTop_toTopOf="@+id/save_settings"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/save"
        app:iconGravity="end"
        app:layout_constraintEnd_toEndOf="@+id/switch_darkmode"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/switch_darkmode"
        app:layout_constraintTop_toBottomOf="@+id/switch_darkmode" />

    <Button
        android:id="@+id/settings_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="@string/login"
        app:layout_constraintBottom_toTopOf="@+id/switch_darkmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.489" />

    <Button
        android:id="@+id/settings_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_app"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/settings_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "@string/contact"
        app:icon="@drawable/ic_baseline_contact_mail_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="592dp" />

    <Button
        android:id="@+id/settings_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_cons"
        app:icon="@drawable/ic_baseline_article_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="480dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="379dp"
        android:layout_height="226dp"
        app:constraint_referenced_ids="settings_support,settings_share,settings_conditions"
        app:flow_horizontalGap="25dp"
        app:flow_maxElementsWrap="1"
        app:flow_verticalAlign="center"
        app:flow_verticalBias="16"
        app:flow_verticalGap="30dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="24dp"
        android:text="Version 1.7.10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>