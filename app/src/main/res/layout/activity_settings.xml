<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.SettingsActivity">

    <TextView
        android:id="@+id/textView_darkmode"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:text="@string/darkmode"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_darkmode"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_marginStart="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_darkmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toEndOf="@+id/textView_darkmode"
        app:layout_constraintTop_toTopOf="@+id/textView_darkmode"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveSettings"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_darkmode"
        app:layout_constraintVertical_bias="0.206" />

    <Button
        android:id="@+id/settings_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Share this App"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/save_settings"
        app:layout_constraintStart_toStartOf="@+id/save_settings"
        app:layout_constraintTop_toBottomOf="@+id/save_settings"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/settings_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Version"
        app:layout_constraintEnd_toEndOf="@+id/settings_share"
        app:layout_constraintStart_toStartOf="@+id/settings_share"
        app:layout_constraintTop_toBottomOf="@+id/settings_share" />

    <Button
        android:id="@+id/settings_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Contact Us"
        app:layout_constraintEnd_toEndOf="@+id/settings_version"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/settings_version"
        app:layout_constraintTop_toBottomOf="@+id/settings_version" />
</androidx.constraintlayout.widget.ConstraintLayout>