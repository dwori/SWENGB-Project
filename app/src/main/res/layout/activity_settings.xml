<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.SettingsActivity">

    <TextView
        android:id="@+id/textView_darkmode"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="52dp"
        android:text="@string/darkmode"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_darkmode"
        android:layout_width="47dp"
        android:layout_height="32dp"
        android:layout_marginStart="92dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_darkmode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toEndOf="@+id/textView_darkmode"
        app:layout_constraintTop_toTopOf="@+id/textView_darkmode"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveSettings"
        android:text="@string/save"
        app:icon="@drawable/ic_baseline_settings_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/settings_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version"
        app:icon="@drawable/ic_baseline_perm_device_information_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="472dp" />

    <Button
        android:id="@+id/settings_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share this App"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/settings_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        app:icon="@drawable/ic_baseline_contact_mail_24"
        app:iconGravity="end"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="592dp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="379dp"
        android:layout_height="226dp"
        app:constraint_referenced_ids="save_settings,settings_version,settings_support,settings_share"
        app:flow_horizontalGap="25dp"
        app:flow_maxElementsWrap="1"
        app:flow_verticalAlign="center"
        app:flow_verticalBias="16"
        app:flow_verticalGap="30dp"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />
</androidx.constraintlayout.widget.ConstraintLayout>