<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fh.swengb.beFast">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_befast"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_befast_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeFast">
        <activity android:name=".drops.recyclerview.description.DescriptionNoteActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".login.LoginActivity"
            android:label="Login"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".settings.ConditionsActivity"
            android:label="Terms and Conditions"
            android:screenOrientation="portrait"
            />
        <activity android:name=".drops.recyclerview.description.DescriptionActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>